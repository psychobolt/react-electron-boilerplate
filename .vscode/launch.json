{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Debug App/Apollo",
      "configurations": ["Debug App", "Debug Apollo"]
    }
  ],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Apollo",
      "outputCapture": "std",
      "outFiles": [
        "${workspaceRoot}/src/.build/server.bundle.js"
      ],
      "preLaunchTask": "npm: debug-apollo",
      "postDebugTask": "npm: stop-apollo",
      "port": 9229,
      "sourceMaps": true,
      "restart": true,
      "timeout": 120000
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug App",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/babel-node",
      "runtimeArgs": [
        "--",
        "${workspaceRoot}/scripts/start.js"
      ],
      "outputCapture": "std",
      "outFiles": [
        "${workspaceRoot}/src/.build/main.bundle.js"
      ],
      "preLaunchTask": "npm: build:dev && npm: watch",
      "sourceMaps": true,
      "restart": true,
      "timeout": 120000
    },
    {
      "name": "Debug Jest",
      "type": "node",
      "request": "launch",
      "args": [
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "--no-cache",
      ],
      "windows": {
        "args": [
          "${workspaceRoot}/node_modules/jest/bin/jest.js",
          "--runInBand",
          "--no-cache"
        ]
      },
      "env": {
        "BABEL_ENV": "test",
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    }
  ]
}