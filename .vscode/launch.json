{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug App",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/babel-node",
      "runtimeArgs": [
        "--",
        "${workspaceRoot}/scripts/start.js"
      ],
      "outputCapture": "std",
      "outFiles": [
        "${workspaceRoot}/src/.build/main.bundle.js"
      ],
      "env": {
        "BABEL_ENV": "commonjs",
      },
      "preLaunchTask": "npm: build:dev",
      "postDebugTask": "npm: stop-debug",
      "sourceMaps": true,
      "restart": true,
      "timeout": 120000
    },
    {
      "name": "Debug Jest",
      "type": "node",
      "request": "launch",
      "args": [
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "--no-cache",
      ],
      "windows": {
        "args": [
          "${workspaceRoot}/node_modules/jest/bin/jest.js",
          "--runInBand",
          "--no-cache"
        ]
      },
      "env": {
        "BABEL_ENV": "test",
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug Jest w/ Coverage",
      "type": "node",
      "request": "launch",     
      "args": [
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "--no-cache",
        "--coverage",
        "--watch"
      ],
      "windows": {
        "args": [
          "${workspaceRoot}/node_modules/jest/bin/jest.js",
          "--runInBand",
          "--no-cache",
          "--coverage",
          "--watch"
        ]
      },
      "env": {
        "BABEL_ENV": "test",
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}